---
import AboutMe from "./RightSection/AboutMe.astro";
import Tags from "./RightSection/Tags.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---

<div class="w-full h-full lg:w-1/4 max-lg:order-2">
    <AboutMe />
    <Tags title="#️⃣ تگ ها" tags={tags} />
</div>
